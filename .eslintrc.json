{
	"root": true,
	"extends": ["neon/common", "neon/node", "neon/typescript", "neon/prettier", "neon/module"],
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"env": {
		"jest": true
	},
	"globals": {
		"NodeJS": "readonly"
	},
	"rules": {
		"curly": ["error", "all"],
		"@typescript-eslint/consistent-type-definitions": ["error", "interface"],
		"eqeqeq": ["error", "always", { "null": "ignore" }],
		"no-eq-null": "off"
	}
}
